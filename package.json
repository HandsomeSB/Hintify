{
  "name": "hintify",
  "displayName": "Hintify",
  "description": "ducki",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hintify.helloWorld",
        "title": "Hintify: Hello World"
      },
      {
        "command": "hintify.toggleTalk",
        "title": "Hintify: toggleTalk"
      }
    ],
    "keybindings": [
      {
        "command": "hintify.toggleTalk",
        "key": "ctrl+alt+t",
        "mac": "cmd+alt+t",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hintify_sidebar",
          "title": "Hintify",
          "icon": "assets/duck.svg"
        }
      ]
    },
    "views": {
      "hintify_sidebar": [
        {
          "id": "hintify_sidebar_view",
          "name": "Hintify",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "openai": "^4.86.1"
  }
}
